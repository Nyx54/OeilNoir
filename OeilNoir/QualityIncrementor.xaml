<UserControl x:Class="OeilNoir.QualityIncrementor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OeilNoir"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="50">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Border BorderThickness="0 0 0 1" BorderBrush="Black" Margin="0,0,0,37.6">
                <TextBlock x:Name="TxtName" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="20" Width="45"/>
            </Border>
            <Grid Margin="0,0,20,0">
                <TextBox x:Name="TxtQual" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="20" Margin="5,30,0,7.6" HorizontalAlignment="Left" Width="20" BorderThickness="0" Focusable="False" Cursor="Arrow"/>
                </Grid>
            <Button x:Name="BtnAdd" Content="▲" Margin="25,20,0,20" HorizontalAlignment="Left" Width="20"/>
            <Button x:Name="BtnDown" Content="▼" Margin="25,40,0,0" HorizontalAlignment="Left" Width="20"/>
        </Grid>
    </Border>
</UserControl>
